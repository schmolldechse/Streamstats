                <TextBlock Text="Text 1" Margin="10" Foreground="White"/>
                <TextBlock Text="Text 1" Margin="10" Foreground="White"/>
                <TextBlock Text="Text 1" Margin="10" Foreground="White"/>
                <TextBlock Text="Text 1" Margin="10" Foreground="White"/>
                <TextBlock Text="Text 1" Margin="10" Foreground="White"/>
                <TextBlock Text="Text 1" Margin="10" Foreground="White"/>
                <TextBlock Text="Text 1" Margin="10" Foreground="White"/>
                <TextBlock Text="Text 1" Margin="10" Foreground="White"/>
                <TextBlock Text="Text 1" Margin="10" Foreground="White"/>
                <TextBlock Text="Text 1" Margin="10" Foreground="White"/>
                <TextBlock Text="Text 1" Margin="10" Foreground="White"/>
                <TextBlock Text="Text 1" Margin="10" Foreground="White"/>
            </StackPanel>
        </ScrollViewer>

        <Button x:Name="backToTop_Subscriptions"
                Grid.Row="3"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0 0 25 10"
                Panel.ZIndex="1" 
                Style="{DynamicResource button_BackToTop}"
                Foreground="FloralWhite"
                FontWeight="Bold"
                Content="⮝ 0 New Events"
                FontSize="13" />

        <!-- Dynamic : Top Donation -->
        <StackPanel x:Name="top_Donation"
                Orientation="Vertical"
                Grid.Row="4" />

        <!-- Notification Center -->
        <StackPanel Grid.Row="4"
                    Panel.ZIndex="2"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Orientation="Vertical"
                    x:Name="notificationCenter"
                    Margin="0 0 15 15" />
    </Grid>
</Window>
