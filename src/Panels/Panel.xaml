                </GroupBox>

            </StackPanel>
        </ScrollViewer>

        <GridSplitter Grid.Row="2" Height="2" HorizontalAlignment="Stretch" VerticalAlignment="Center" Background="#333742" />

        <ScrollViewer x:Name="subscriber_Panel" Grid.Row="3" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
