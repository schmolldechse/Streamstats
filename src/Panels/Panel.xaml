<Window x:Class="Streamstats.src.Panels.Panel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Streamstats.src.Panels"
        xmlns:UI="clr-namespace:Streamstats.src.UI"
        mc:Ignorable="d"       
        Title="Streamstats" 
        MinHeight="600"
        MinWidth="400" 
        Height="950"
        Width="450"
        WindowStartupLocation="CenterScreen">

    <Window.Background>
        <SolidColorBrush Color="#030713"></SolidColorBrush>
    </Window.Background>

    <Window.Resources>
        <!-- Style for scrollbar's thumb -->
        <Style TargetType="ScrollBar">
            <Setter Property="Background" Value="#030713" />
            <Setter Property="Width" Value="3" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="4*"/>
                                <RowDefinition Height="3*"/>
                            </Grid.RowDefinitions>

                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="3" 
                                    Grid.RowSpan="2" />
                            <Track x:Name="PART_Track" 
                                   IsDirectionReversed="True" 
                                   Grid.RowSpan="2">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="{x:Static ScrollBar.LineUpCommand}" 
                                                  CommandTarget="{Binding ElementName=PART_VerticalScrollBar}"
                                                  Opacity="0"/>
                                </Track.DecreaseRepeatButton>

                                <Track.Thumb>
                                    <Thumb Background="#A656E9" 
                                           Width="8" >
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="5"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>

                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="{x:Static ScrollBar.LineDownCommand}" 
                                                  CommandTarget="{Binding ElementName=PART_VerticalScrollBar}" 
                                                  Opacity="0"/>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for New Events buttons -->
        <Style x:Key="button_BackToTop" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#692AD1" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Width="125" 
                                Height="40"
                                CornerRadius="20"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#A656E9" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <UI:PlaceholderTextBox x:Key="PlaceholderTextBox" />

    </Window.Resources>

    <Grid Background="#030713" Margin="4 4 4 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="3" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Control Panel -->
        <DockPanel Grid.Row="0"
                   Margin="9 7 9 7"
                   x:Name="top_ControlPanel">

            <!-- Pause / Unpause alerts button -->
            <Border Background="#030713"
                    BorderBrush="#212936"
                    BorderThickness="2"
                    CornerRadius="4">
                <Button Background="Transparent" 
                        BorderThickness="0"
                        Margin="12 0 12 0"
                        x:Name="pause_Button"
                        Click="Pause_Button_Click"
                        Style="{StaticResource button}">
                    <Image x:Name="pause_Button_Image" 
                           Source="../../Images/Play_Red.ico" 
                           Height="20"
                           Width="20" />
                </Button>
            </Border>

            <!-- Skip alerts button -->
            <Border Background="#030713"
                    BorderBrush="#212936"
                    BorderThickness="2"
                    CornerRadius="4"
                    Margin="10 0 0 0">
                <Button Background="Transparent" 
                        BorderThickness="0"
                        Margin="12 0 12 0"
                        x:Name="skip_Button"
                        Click="Skip_Button_Click"
                        Style="{StaticResource button}">
                    <Image x:Name="skip_Button_Image"
                           Source="../../Images/Skip.ico" 
                           Height="25"
                           Width="25" />
                </Button>
            </Border>

            <!-- Mute / unmute alerts button -->
            <Border Background="#030713"
                    BorderBrush="#212936"
                    BorderThickness="2"
                    CornerRadius="4"
                    Margin="10 0 0 0">
                <Button Background="Transparent" 
                        BorderThickness="0"
                        Margin="12 0 12 0"
                        x:Name="mute_Button"
                        Click="Mute_Button_Click"
                        Style="{StaticResource button}">
                    <Image x:Name="mute_Button_Image"
                           Source="../../Images/Unmuted.ico" 
                           Height="20"
                           Width="20" />
                </Button>
            </Border>

            <!-- Search field -->
            <Border Background="#030713"
                    BorderBrush="#212936"
                    BorderThickness="2"
                    CornerRadius="4"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    x:Name="search_Border">
                <UI:PlaceholderTextBox Placeholder="Search"
                                       Foreground="FloralWhite"
                                       Background="Transparent"
                                       Margin="7 5 7 5" 
                                       BorderThickness="0"
                                       Height="Auto" 
                                       x:Name="searchBox"
                                       TextChanged="searchBox_TextChanged"
                                       MouseEnter="searchBox_MouseEnter"
                                       MouseLeave="searchBox_MouseLeave"/>
            </Border>
        </DockPanel>

        <!-- Donation Panel -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled"
                      x:Name="scrollViewer_donationPanel"
                      Margin="2 1 -4 7"
                      ScrollChanged="Scroll_Donation_Panel">
            <StackPanel x:Name="donation_Panel"
