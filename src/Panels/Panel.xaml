        <Button x:Name="backToTop_Donations"
                Grid.Row="1"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0 0 25 10"
                Panel.ZIndex="1" 
                Style="{DynamicResource button_BackToTop}"
                Click="backToTop_Donations_Click" >
            <StackPanel Orientation="Horizontal">
                <Image x:Name="backToTop_Donations_Image" 
                       Source="../../Images/BackToTop.ico"
                       Height="25"
                       Width="25" />
                <TextBlock x:Name="backToTop_Donations_TextBlock" 
                           Foreground="FloralWhite"
                           FontWeight="Medium" 
                           FontSize="12"
                           Text="0 New Events"
                           Margin="3 4 0 0"/>
            </StackPanel>
        </Button>


        <!-- Splitter -->
        <GridSplitter Grid.Row="2" 
                      Height="3" 
                      HorizontalAlignment="Stretch" 
                      VerticalAlignment="Center" 
                      Background="#333742" 
                      />

        <!-- Subscriber Panel -->
        <ScrollViewer Grid.Row="3" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled"
                      Margin="2 5 2 0">
            <StackPanel x:Name="subsriber_panel">
                <TextBlock Text="Text 1" Margin="10" Foreground="White"/>
                <TextBlock Text="Text 1" Margin="10" Foreground="White"/>
